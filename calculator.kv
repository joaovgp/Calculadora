#:kivy 2.1.0
<Calculator>:
    orientation: 'vertical'
    background_color: 0.655, 0.902, 0.95, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        id: calc_display
        text: '0'
        font_size: '50sp'
        color: 0, 0, 0, 1
        max_lines: 1
        size_hint_y: 0.2
        text_size: self.size
        halign: 'right'
        padding: '30dp', '0dp'
        
    GridLayout:
        cols: 4
        rows: 5
        spacing: '5dp'
        padding: '10dp'
        Button:
            text: '7'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '8'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '9'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '+'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '4'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '5'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '6'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '-'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '1'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '2'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '3'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '*'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: 'C'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '0'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: 'DEL'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Button:
            text: '/'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)
        Widget:
            Button:
                text: '='
                font_size: '30sp'
                x: self.parent.x
                y: placeholder1.y
                size: self.parent.width + placeholder1.size[0] + placeholder2.size[0] + self.parent.parent.padding[0], placeholder1.size[1]
                on_release: root.evaluate(calc_display)
        Widget:
            id: placeholder1
        Widget:
            id: placeholder2
        Button:
            text: '.'
            font_size: '30sp'
            on_release: root.addToDisplay(self.text)